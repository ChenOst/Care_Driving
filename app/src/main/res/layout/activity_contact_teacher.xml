<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.searchTeachers.ContactTeacherActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tvDetailsTeachersFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/teachers_first_name"
                    android:textColor="@color/colorBlack"
                    android:textSize="24sp"
                    android:layout_margin="4dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvDetailsTeachersLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/teachers_last_name"
                    android:textColor="@color/colorBlack"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:layout_toEndOf="@+id/tvDetailsTeachersFirstName"
                    android:layout_toRightOf="@+id/tvDetailsTeachersFirstName" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvDetailsTeachersExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/teachers_experience"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_below="@+id/layoutName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvDetailsTeachersLoction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/teachers_location"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_below="@+id/tvDetailsTeachersExperience"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutCarInfo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/tvDetailsTeachersLoction">

                <TextView
                    android:id="@+id/tvDetailsTeachersCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/teachers_car"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp" />

                <TextView
                    android:id="@+id/tvDetailsTeachersCarYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/teachers_car_year"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_toEndOf="@+id/tvDetailsTeachersCar"
                    android:layout_toRightOf="@+id/tvDetailsTeachersCar"/>

                <TextView
                    android:id="@+id/tvDetailsTeachersGear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/teachers_gear"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_toEndOf="@+id/tvDetailsTeachersCarYear"
                    android:layout_toRightOf="@+id/tvDetailsTeachersCarYear"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvDetailsLessonPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/price"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/layoutCarInfo"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvDetailsTeachersPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/teachers_phone"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tvDetailsLessonPrice"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgPhone"
                android:layout_toEndOf="@+id/tvDetailsTeachersPhone"
                android:layout_toRightOf="@+id/tvDetailsTeachersPhone"
                android:layout_alignTop="@+id/tvDetailsTeachersPhone"
                android:layout_alignBottom="@+id/tvDetailsTeachersPhone"
                android:src="@drawable/ic_phone"/>

            <Button
                android:id="@+id/tvDetailsConnectToTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/teachers_connect"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tvDetailsTeachersPhone"
                android:layout_marginTop="16dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>