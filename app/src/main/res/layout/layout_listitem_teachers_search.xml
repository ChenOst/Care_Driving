<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/layoutTeachersDetails"
    android:background="@color/colorBackgroundBlue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStudentFirstName"
        android:text="@string/first_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStudentLastName"
        android:text="@string/first_name"
        android:layout_toEndOf="@+id/tvStudentFirstName"
        android:layout_toRightOf="@+id/tvStudentFirstName"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCity"
        android:text="@string/location"
        android:layout_below="@+id/tvStudentFirstName"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvGreenFormValue"
        android:text="@string/teachers_gear"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/tvStudentFirstName"
        android:layout_toEndOf="@+id/tvColon"
        android:layout_toRightOf="@+id/tvColon"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvColon"
        android:text="@string/comma"
        android:layout_below="@+id/tvStudentFirstName"
        android:layout_toEndOf="@+id/tvCity"
        android:layout_toRightOf="@+id/tvCity"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTheory"
        android:text="@string/price"
        android:layout_below="@+id/tvCity"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNewShekel"
        android:text="@string/new_shekel"
        android:layout_below="@+id/tvCity"
        android:layout_toEndOf="@+id/tvTheory"
        android:layout_toRightOf="@+id/tvTheory"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPhoneNumber"
        android:text="@string/phone"
        android:layout_below="@+id/tvTheory"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"/>




</RelativeLayout>